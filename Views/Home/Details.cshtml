@model backend.Models.Product
@{
    ViewData["Title"] = @Model.Title;
}

<h1>@Model.Title</h1>

<div class="row">
    <div class="col-md-6">
        @if (Model.Images != null && Model.Images.Any())
        {
            <img src="@Model.Images.First()" class="img-fluid" alt="@Model.Title">
        }
        else
        {
            <img src="@Model.Thumbnail" class="img-fluid" alt="@Model.Title">
        }
    </div>
    <div class="col-md-6">
        <h3 class="price" data-price="@Model.Price">$@Model.Price</h3>
        <p>@Model.Description</p>
        <h5>Tags:</h5>
        <p>
            @foreach (var tag in Model.Tags)
            {
                <span class="badge badge-secondary mr-1">@tag</span>
            }
        </p>
        <h5>Shipping Information:</h5>
        <p>@Model.ShippingInformation</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Products</a>
    </div>
</div>